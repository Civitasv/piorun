{
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.useTabStops": true,
    },
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.useTabStops": true,
    },
    // Doxygen Documentation Generator
    "doxdocgen.c.commentPrefix": " * ",
    "doxdocgen.c.firstLine": "/**",
    "doxdocgen.c.lastLine": " */",
    "doxdocgen.c.triggerSequence": "/**",
    "doxdocgen.c.getterText": "Get the {name} attr",
    "doxdocgen.c.setterText": "Set the {name} attr",
    "doxdocgen.c.factoryMethodText": "Create a {name} object",
    "doxdocgen.file.copyrightTag": [
        "@(c) {year} Civitasv"
    ],
    "doxdocgen.generic.authorEmail": "hscivitasv@gmail.com",
    "doxdocgen.generic.authorName": "Civitasv",
    "doxdocgen.generic.commandSuggestionAddPrefix": true,
}